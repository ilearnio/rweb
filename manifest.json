{
	"name": "R Web",
	"description": "R Web",

	"permissions": [ "storage" ],
	"optional_permissions": [ "tabs", "contextMenus" ],

	"options_page": "options/options.html",
	"content_scripts": [
		{
			"all_frames": true,
			"js": [ "helpers.js", "content.js" ],
			"matches": [ "http://*/*", "https://*/*" ],
			"run_at": "document_start"
		}
	],
    "background": {
		"scripts": [ "helpers.js", "background.js" ]
	},
    "browser_action": {
        "default_title": "Add/edit custom CSS/JS",
        "default_icon": {
			"38": "images/38x38.png",
			"19": "images/19x19.png"
		}
    },

	"icons": {
		"128": "images/128x128.png",
		"64": "images/64x64.png",
		"48": "images/48x48.png",
		"32": "images/32x32.png",
		"16": "images/16x16.png"
	},
	"version": "1.3",
	"manifest_version": 2
}
